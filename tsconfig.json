{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "baseUrl": "src/",
    "outDir": "dist",
    "lib": [
      "es2018",
      "dom"
    ],
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "moduleResolution": "node",
    "typeRoots": [
      "node_module/@types",
      "./typings",
      "./types",
      "node_modules/js-data/dist/js-data.d.ts",
      "node_modules/js-data-rethinkdb/dist/js-data-rethinkdb.d.ts",
      "node_modules/jasmine-expect/jasmine-matchers.d.ts"
    ],
    "types": [
      "node",
      "jasmine",
      "jasmine-expect"
    ]
  },
  "include": [
    "src/**/*.ts",
    ".env"
  ],
  "exclude": [
    "node_modules"
  ]
}
